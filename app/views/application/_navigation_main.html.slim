- if user_signed_in?
  = active_link_to "Dashboard", root_path, active: :exclusive, wrap_tag: :li
  = active_link_to "My posts", user_posts_path(current_user), wrap_tag: :li, active: /^((?!subscribed).)*$/
  = active_link_to "My subscribed posts", user_posts_path(current_user, subscribed: true), wrap_tag: :li, active: /subscribed/
